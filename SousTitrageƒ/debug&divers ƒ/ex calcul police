// on ouvre un dialog de progression		dialog=GetNewDialog(167,nil,(WindowPtr)-1);		SetPort(dialog);		TextFont(geneva);		TextSize(9);		TextFace(bold);		DrawDialog(dialog);		TextFace(0);// on entoure quelque carrŽs		GetDItem(dialog,17,&type,&hndl,&box);		FrameRect(&box);		GetDItem(dialog,16,&type,&hndl,&box);		FrameRect(&box);// on dessine la reglette		GetDItem(dialog,3,&type,&hndl,&box);		InsetRect(&box,-1,-1);		FrameRect(&box);		color.red=32000; color.green=32000; color.blue=32000;		RGBForeColor(&color);		InsetRect(&box,1,1);		PaintRect(&box);		color.red=0; color.green=0; color.blue=0;		RGBForeColor(&color);// on fabrique un nom de police et on recopie ce nom dans le font record		makeDisplayFontName(FontRender,&st0);		GetDItem(dialog,2,&type,&hndl,&box);		SetIText(hndl,&st0);		BlockMove(&st0,&FontRender->FontName,(long)st0[0]+1);