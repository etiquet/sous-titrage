				case kNeed_FireWeapon:									if (event.data == kISpButtonDown) button=button|1<<event.refCon;					else button=button&(0xFFFFFFFF-1<<event.refCon);					break;									case kNeed_StartPause:					if (event.data == kISpButtonDown)					break;									case kNeed_NextWeapon:					if (event.data == kISpButtonDown)					break;									case kNeed_PreviousWeapon:					if (event.data == kISpButtonDown)					break;									case kNeed_Weapon_MachineGun:					if (event.data == kISpButtonDown)					break;									case kNeed_Weapon_Cannon:					if (event.data == kISpButtonDown)					break;									case kNeed_Weapon_Laser:					if (event.data == kISpButtonDown)					break;									case kNeed_Weapon_Missle:					if (event.data == kISpButtonDown)					break;									case kNeed_Weapon_PrecisionBomb:					if (event.data == kISpButtonDown)					break;									case kNeed_Weapon_ClusterBomb:					if (event.data == kISpButtonDown)					break;									case kNeed_Quit:					if (event.data == kISpButtonDown)					break;